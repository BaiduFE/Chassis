<?xml version="1.0" encoding="utf-8"?>
<project basedir=".." productname="vs" modulename="hellorocket" framework="webapp-1.3.6">
    <request>
        <urlmap match="/^\/news$/" rewrite="data/news.php">
            <get param="tn" match="/[a-zA-Z0-9]+/"/>
        </urlmap>
        <urlmap match="/^\/index$/" 
            rewrite="data/index.json" 
            header="Content-Type:text/javascript; charset=UTF-8"/>
        <urlmap match="/^\/articles\/get_article.php$/" 
            rewrite="data/get_article.php" 
            header="Content-Type:text/javascript; charset=UTF-8"/>
        <urlmap match="/^\/articles\/list_articles.php$/" 
            rewrite="data/list_articles.php" 
            header="Content-Type:text/javascript; charset=UTF-8"/>
        <urlmap match="/^\/articles\/data\/info.php$/" 
            rewrite="data/info.php" 
            header="Content-Type:text/javascript; charset=UTF-8"/>
        <!--urlmap match="/^\/index$/" 
            rewrite="data/rocket_framework_introduction.json" 
            header="Content-Type:text/javascript; charset=UTF-8"/-->
    </request>
    
    <setting>
		<smarty left_delimiter="{@" right_delimiter="@}"/>

        <!--静态文件压缩-->
        <CompressSyntax enable="false"/>
        <JsCompressSyntax enable="true" debug_enable="false"/>

        <!--css压缩-->
        <CssCompressSyntax enable="false" yui_version="2.4.2" debug_enable="false"/>

        <Base64Syntax limit="1024" enable="false"/>

        <!-- inline 使用内嵌方式加入loader脚本 -->
        <AutoLoadSyntax enable="true" inline="true"/>

    </setting>
        
    
    <merge>
        <app>
            <!-- app -->
			<import>rocket-chassis-bridge.js</import>
            <import>rocket.router.hellorocket.js</import>
            <import>rocket.init.js</import>

            <!-- page -->
            <import>/page/index/js/view/rocket.pageview.index.js</import>
            <import>/page/sayhello/js/view/rocket.pageview.sayhello.js</import>
            <import>/page/say/js/view/rocket.pageview.say.js</import>

        </app>

        <subview-index_header>
            <import>/page/index/js/view/rocket.subview.index_header.js</import>
        </subview-index_header>
        
        <subview-index_content>
            <import>/page/index/js/view/rocket.subview.index_content.js</import>
        </subview-index_content>
        
        <subview-sayhello_header>
            <import>/page/sayhello/js/view/rocket.subview.sayhello_header.js</import>
        </subview-sayhello_header>
        
        <subview-sayhello_content>
            <import>/page/sayhello/js/view/rocket.subview.sayhello_content.js</import>
        </subview-sayhello_content>
        
        <subview-say_header>
            <import>/page/say/js/view/rocket.subview.say_header.js</import>
        </subview-say_header>
        
        <subview-say_content>
            <import>/page/say/js/view/rocket.subview.say_content.js</import>
        </subview-say_content>
        
        <subview-say_content_detail>
            <import>/page/say/js/model/*.js</import>
            <import>/page/say/js/view/rocket.subview.say_content_detail.js</import>
        </subview-say_content_detail>
        
    </merge>

    <!--task name="refresh_manifest">
        <delete dir="./output"/>
        <manifestDateStamp/>
    </task-->

    <!--build name="build" outputdir="./output" depends="refresh_manifest" /-->

</project>
